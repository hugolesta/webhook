	},
	"devDependencies": {
		"@types/hapi": "^18.0.3",
		"@types/hapi__joi": "^16.0.12",
		"eslint": "^6.8.0",
		"husky": "^4.2.5",
		"jest": "^25.2.7",
		"lint-staged": "^10.1.3",
		"nodemon": "^2.0.3",
		"prettier": "^2.0.4"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.js": "eslint --cache --fix"
	}
